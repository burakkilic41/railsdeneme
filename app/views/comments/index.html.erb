<p id="notice"><%= notice %></p>

<h1>Yorumları listele</h1>

<table>
  <thead>
    <tr>
      <th>Bdy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.bdy %></td>
        <td><%= link_to 'Göster', comment %></td>
        <td><%= link_to 'Düzenle', edit_comment_path(comment) %></td>
        <td><%= link_to 'Sil', comment, method: :delete, data: { confirm: 'Eminmisiniz?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Yeni yorum', new_comment_path %>
